  "description": "",
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/shortid": "0.0.29",
    "@types/ws": "8.2.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "lint-staged": "11.2.3",
    "mock-socket": "9.0.6",
    "prettier": "2.4.1",
    "puppeteer": "10.4.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "4.4.4",
    "webpack": "5.59.1",
    "webpack-cli": "4.9.1",
    "webpack-node-externals": "3.0.0"
  },
  "license": "ISC",
  "lint-staged": {
    "*.{ts,json}": [
      "git add",
      "prettier --trailing-comma=all --print-width=70 --no-semi --write"
    ]
  },
  "main": "lib/server.js",
  "name": "web-udp",
  "scripts": {
    "clear": "lerna exec -- rm -rf ./dist/* && lerna clean --yes",
    "format": "prettier packages/**/*.ts --write",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "yarn run build build:protocol && yarn run build build:client && yarn run build build:server",
    "build:client": "yarn workspace @web-udp/client run build",
    "build:protocol": "yarn workspace @web-udp/protocol run build",
    "build:server": "yarn workspace @web-udp/server run build",
    "precommit": "lint-staged",
    "start": "node examples/server.js",
    "test": "jest",
    "test-coverage": "jest --verbose --coverage"
  },
  "version": "4.0.0",
  "workspaces": [
    "packages/*"
  ]
}
